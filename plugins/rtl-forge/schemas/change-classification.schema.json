{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RTL Change Classification",
  "description": "Schema for RTL change classification output from classify-change.mjs",
  "type": "object",
  "required": ["level", "confidence", "reasons"],
  "properties": {
    "level": {
      "type": "string",
      "enum": ["TRIVIAL", "MINOR", "MAJOR", "ARCHITECTURAL"],
      "description": "Classification level of the RTL change"
    },
    "subClassification": {
      "type": "string",
      "enum": ["MINOR-MECHANICAL", "MINOR-LOGIC"],
      "description": "Sub-classification for MINOR level changes"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Confidence score of the classification (0-100)"
    },
    "reasons": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Reasons for the classification"
    },
    "file": {
      "type": "string",
      "description": "Path to the changed file"
    },
    "isTestbench": {
      "type": "boolean",
      "description": "Whether the file is a testbench"
    },
    "isNewFile": {
      "type": "boolean",
      "description": "Whether this is a new file creation"
    }
  }
}
