{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtl-forge/schemas/coverage-output.schema.json",
  "title": "Coverage Analysis Output",
  "description": "Output schema for Phase 5: Coverage Analysis",
  "type": "object",
  "required": ["phase", "status", "timestamp", "coverage"],
  "properties": {
    "phase": {
      "type": "string",
      "const": "coverage-analysis"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "complete", "failed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "coverage": {
      "type": "object",
      "required": ["code_coverage", "functional_coverage"],
      "properties": {
        "code_coverage": {
          "type": "object",
          "description": "Code coverage metrics",
          "required": ["overall_percentage"],
          "properties": {
            "overall_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Overall code coverage percentage"
            },
            "line_coverage": {
              "type": "object",
              "properties": {
                "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                "total_lines": {"type": "integer", "minimum": 0},
                "covered_lines": {"type": "integer", "minimum": 0},
                "uncovered_lines": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "file": {"type": "string"},
                      "line": {"type": "integer"},
                      "code": {"type": "string"}
                    }
                  }
                }
              }
            },
            "branch_coverage": {
              "type": "object",
              "properties": {
                "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                "total_branches": {"type": "integer", "minimum": 0},
                "covered_branches": {"type": "integer", "minimum": 0},
                "uncovered_branches": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "file": {"type": "string"},
                      "line": {"type": "integer"},
                      "condition": {"type": "string"}
                    }
                  }
                }
              }
            },
            "toggle_coverage": {
              "type": "object",
              "description": "Signal toggle coverage",
              "properties": {
                "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                "total_bits": {"type": "integer", "minimum": 0},
                "toggled_bits": {"type": "integer", "minimum": 0},
                "untoggled_signals": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "module": {"type": "string"},
                      "signal": {"type": "string"},
                      "width": {"type": "integer"}
                    }
                  }
                }
              }
            },
            "fsm_coverage": {
              "type": "object",
              "description": "Finite State Machine coverage",
              "properties": {
                "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                "total_states": {"type": "integer", "minimum": 0},
                "covered_states": {"type": "integer", "minimum": 0},
                "total_transitions": {"type": "integer", "minimum": 0},
                "covered_transitions": {"type": "integer", "minimum": 0},
                "uncovered_states": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "uncovered_transitions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "from": {"type": "string"},
                      "to": {"type": "string"},
                      "condition": {"type": "string"}
                    }
                  }
                }
              }
            },
            "expression_coverage": {
              "type": "object",
              "properties": {
                "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                "total_expressions": {"type": "integer", "minimum": 0},
                "covered_expressions": {"type": "integer", "minimum": 0}
              }
            }
          }
        },
        "functional_coverage": {
          "type": "object",
          "description": "Functional coverage metrics",
          "required": ["overall_percentage"],
          "properties": {
            "overall_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Overall functional coverage percentage"
            },
            "covergroups": {
              "type": "array",
              "description": "Coverage groups and coverpoints",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                  "coverpoints": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "percentage": {"type": "number", "minimum": 0, "maximum": 100},
                        "bins_total": {"type": "integer", "minimum": 0},
                        "bins_covered": {"type": "integer", "minimum": 0},
                        "uncovered_bins": {
                          "type": "array",
                          "items": {"type": "string"}
                        }
                      }
                    }
                  },
                  "crosses": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "percentage": {"type": "number", "minimum": 0, "maximum": 100}
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "assertion_coverage": {
          "type": "object",
          "description": "Assertion coverage metrics",
          "properties": {
            "percentage": {"type": "number", "minimum": 0, "maximum": 100},
            "total_assertions": {"type": "integer", "minimum": 0},
            "triggered_assertions": {"type": "integer", "minimum": 0},
            "untriggered_assertions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "file": {"type": "string"},
                  "line": {"type": "integer"},
                  "description": {"type": "string"}
                }
              }
            }
          }
        }
      }
    },
    "gaps": {
      "type": "object",
      "description": "Coverage gaps analysis",
      "properties": {
        "critical_gaps": {
          "type": "array",
          "description": "High-priority coverage gaps",
          "items": {
            "type": "object",
            "properties": {
              "type": {"type": "string", "enum": ["code", "functional", "assertion", "corner_case"]},
              "severity": {"type": "string", "enum": ["critical", "high", "medium", "low"]},
              "description": {"type": "string"},
              "recommendation": {"type": "string"},
              "location": {
                "type": "object",
                "properties": {
                  "file": {"type": "string"},
                  "line": {"type": "integer"},
                  "module": {"type": "string"}
                }
              }
            }
          }
        },
        "improvement_suggestions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "area": {"type": "string"},
              "current_coverage": {"type": "number"},
              "target_coverage": {"type": "number"},
              "estimated_effort": {"type": "string", "enum": ["low", "medium", "high"]},
              "actions": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "trends": {
      "type": "object",
      "description": "Coverage trend analysis",
      "properties": {
        "historical_data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {"type": "string", "format": "date-time"},
              "overall_coverage": {"type": "number"},
              "code_coverage": {"type": "number"},
              "functional_coverage": {"type": "number"}
            }
          }
        },
        "velocity": {
          "type": "number",
          "description": "Coverage increase rate (percentage points per day)"
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "report_path": {"type": "string"},
        "html_report": {"type": "string"},
        "coverage_database": {"type": "string"},
        "merged_coverage_data": {"type": "string"}
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "goal_achieved": {"type": "boolean"},
        "coverage_target": {"type": "number", "minimum": 0, "maximum": 100},
        "remaining_gap": {"type": "number", "minimum": 0, "maximum": 100}
      }
    }
  }
}
