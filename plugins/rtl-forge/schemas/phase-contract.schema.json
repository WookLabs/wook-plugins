{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtl-forge/schemas/phase-contract.schema.json",
  "title": "RTL-Forge Phase Contract",
  "description": "Base schema for phase contracts in RTL-Forge plugin workflows",
  "type": "object",
  "required": ["phase", "status", "timestamp"],
  "properties": {
    "phase": {
      "type": "string",
      "description": "Phase identifier",
      "enum": [
        "rtl-analysis",
        "testbench-generation",
        "testcase-generation",
        "simulation",
        "coverage-analysis",
        "assertion-generation",
        "formal-verification"
      ]
    },
    "status": {
      "type": "string",
      "description": "Current status of the phase",
      "enum": ["pending", "in_progress", "complete", "failed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last status update"
    },
    "inputs": {
      "type": "object",
      "description": "Input artifacts consumed by this phase",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Input file paths"
        },
        "previous_phase_output": {
          "type": "string",
          "description": "Path to previous phase output JSON"
        },
        "config": {
          "type": "object",
          "description": "Phase-specific configuration"
        }
      }
    },
    "outputs": {
      "type": "object",
      "description": "Output artifacts produced by this phase",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Output file paths"
        },
        "report_path": {
          "type": "string",
          "description": "Path to phase report file"
        },
        "metadata": {
          "type": "object",
          "description": "Phase-specific output metadata"
        }
      }
    },
    "duration_ms": {
      "type": "number",
      "description": "Execution duration in milliseconds",
      "minimum": 0
    },
    "error": {
      "type": "object",
      "description": "Error details if status is 'failed'",
      "properties": {
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "code": {
          "type": "string",
          "description": "Error code"
        },
        "stack": {
          "type": "string",
          "description": "Stack trace"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Phase execution metrics"
    }
  }
}
