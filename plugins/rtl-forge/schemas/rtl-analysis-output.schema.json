{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtl-forge/schemas/rtl-analysis-output.schema.json",
  "title": "RTL Analysis Output",
  "description": "Output schema for Phase 1: RTL Analysis",
  "type": "object",
  "required": ["phase", "status", "timestamp", "analysis"],
  "properties": {
    "phase": {
      "type": "string",
      "const": "rtl-analysis"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "complete", "failed"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "analysis": {
      "type": "object",
      "required": ["modules", "hierarchy", "clock_domains"],
      "properties": {
        "modules": {
          "type": "array",
          "description": "List of analyzed RTL modules",
          "items": {
            "type": "object",
            "required": ["name", "file_path", "ports"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Module name"
              },
              "file_path": {
                "type": "string",
                "description": "Source file path"
              },
              "ports": {
                "type": "object",
                "properties": {
                  "inputs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["name", "width"],
                      "properties": {
                        "name": {"type": "string"},
                        "width": {"type": "integer", "minimum": 1},
                        "type": {"type": "string", "enum": ["logic", "wire", "reg"]}
                      }
                    }
                  },
                  "outputs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["name", "width"],
                      "properties": {
                        "name": {"type": "string"},
                        "width": {"type": "integer", "minimum": 1},
                        "type": {"type": "string", "enum": ["logic", "wire", "reg"]}
                      }
                    }
                  }
                }
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {"type": "string"},
                    "default_value": {"type": ["string", "number"]}
                  }
                }
              },
              "instances": {
                "type": "array",
                "description": "Submodule instances",
                "items": {
                  "type": "object",
                  "properties": {
                    "instance_name": {"type": "string"},
                    "module_type": {"type": "string"}
                  }
                }
              },
              "state_machines": {
                "type": "array",
                "description": "Detected FSMs",
                "items": {
                  "type": "object",
                  "properties": {
                    "states": {
                      "type": "array",
                      "items": {"type": "string"}
                    },
                    "transitions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "from": {"type": "string"},
                          "to": {"type": "string"},
                          "condition": {"type": "string"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "hierarchy": {
          "type": "object",
          "description": "Module hierarchy tree",
          "required": ["top_module"],
          "properties": {
            "top_module": {"type": "string"},
            "depth": {"type": "integer", "minimum": 0},
            "tree": {"type": "object"}
          }
        },
        "clock_domains": {
          "type": "array",
          "description": "Clock domain analysis",
          "items": {
            "type": "object",
            "required": ["name", "frequency_mhz"],
            "properties": {
              "name": {"type": "string"},
              "frequency_mhz": {"type": "number", "minimum": 0},
              "reset_signal": {"type": "string"},
              "reset_polarity": {"type": "string", "enum": ["active_high", "active_low"]},
              "modules": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Modules using this clock domain"
              }
            }
          }
        },
        "signals": {
          "type": "object",
          "description": "Global signal analysis",
          "properties": {
            "total_count": {"type": "integer", "minimum": 0},
            "bus_width_distribution": {
              "type": "object",
              "additionalProperties": {"type": "integer"}
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "module_count": {"type": "integer", "minimum": 0},
        "total_lines": {"type": "integer", "minimum": 0},
        "complexity_score": {"type": "number", "minimum": 0},
        "estimated_verification_effort": {
          "type": "string",
          "enum": ["low", "medium", "high", "very_high"]
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "report_path": {"type": "string"},
        "dependency_graph": {"type": "string"}
      }
    }
  }
}
