{
  "description": "RTL-Forge hooks - Write guard and auto skill trigger",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/rtl-write-guard.mjs",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/auto-skill-trigger.mjs",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
