{
  "$schema": "../schemas/team.schema.json",
  "schema_version": "1.0",
  "name": "deep-review-team",
  "display_name": "심층 리뷰 팀",
  "description": "6개 전문 에이전트를 병렬 실행하여 챕터를 다관점으로 심층 리뷰하는 팀 (swarm review 일반화)",
  "category": "verification",
  "agents": [
    {
      "agent": "critic",
      "role": "validator",
      "responsibility": "문학 품질 평가: 구조적 완성도, 문체 수준, 서사적 깊이",
      "model": "opus"
    },
    {
      "agent": "beta-reader",
      "role": "validator",
      "responsibility": "독자 경험 분석: 몰입도, 감정 반응, 이탈 위험 구간, 후킹 효과",
      "model": "sonnet"
    },
    {
      "agent": "consistency-verifier",
      "role": "validator",
      "responsibility": "설정 일관성 검증: 캐릭터, 세계관, 타임라인, 사실, 플롯 로직",
      "model": "sonnet"
    },
    {
      "agent": "engagement-optimizer",
      "role": "validator",
      "responsibility": "페이싱 분석: 긴장 곡선, 장면 리듬, 비트 타이밍, 독자 피로도",
      "model": "sonnet"
    },
    {
      "agent": "character-voice-analyzer",
      "role": "validator",
      "responsibility": "캐릭터 음성 분석: 말투 일관성, OOC 감지, 대화 자연스러움",
      "model": "sonnet"
    },
    {
      "agent": "prose-quality-analyzer",
      "role": "validator",
      "responsibility": "산문 품질 분석: show vs tell, 감각 묘사, 필터 단어, 구체성",
      "model": "sonnet"
    }
  ],
  "workflow": {
    "type": "parallel",
    "steps": [
      {
        "name": "deep-review",
        "agents": ["critic", "beta-reader", "consistency-verifier", "engagement-optimizer", "character-voice-analyzer", "prose-quality-analyzer"],
        "execution": "parallel",
        "output": "6개 관점의 상세 리뷰 JSON"
      }
    ]
  },
  "coordination": {
    "mode": "orchestrated",
    "communication": "task-based"
  },
  "quality_gates": {
    "enabled": true,
    "consensus": "majority",
    "thresholds": {
      "critic": 85,
      "beta-reader": 75,
      "consistency-verifier": 85,
      "engagement-optimizer": 70,
      "character-voice-analyzer": 80,
      "prose-quality-analyzer": 75
    }
  },
  "cost_estimate": {
    "tokens_per_agent": 30000,
    "warning_message": "심층 리뷰 팀은 6개 에이전트를 병렬 실행합니다. 약 180K 토큰이 소요될 수 있습니다."
  }
}
