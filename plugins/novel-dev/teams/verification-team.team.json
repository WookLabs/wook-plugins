{
  "$schema": "../schemas/team.schema.json",
  "schema_version": "1.0",
  "name": "verification-team",
  "display_name": "검증 팀",
  "description": "3개 검증 에이전트를 병렬 실행하여 챕터 품질을 다관점으로 평가하는 팀 (chapter-verifier 일반화)",
  "category": "verification",
  "agents": [
    {
      "agent": "critic",
      "role": "validator",
      "responsibility": "문학 품질 평가: 서사 완성도, 플롯 일관성, 캐릭터 일관성, 설정 준수",
      "model": "opus"
    },
    {
      "agent": "beta-reader",
      "role": "validator",
      "responsibility": "독자 경험 분석: 몰입도, 감정 반응, 이탈 위험, 후킹 효과",
      "model": "sonnet"
    },
    {
      "agent": "genre-validator",
      "role": "validator",
      "responsibility": "장르 적합성 검증: 필수 요소, 클리셰 추적, 상업 요소",
      "model": "sonnet"
    }
  ],
  "workflow": {
    "type": "parallel",
    "steps": [
      {
        "name": "validate",
        "agents": ["critic", "beta-reader", "genre-validator"],
        "execution": "parallel",
        "output": "각 검증자의 점수 + 피드백 JSON"
      }
    ]
  },
  "coordination": {
    "mode": "orchestrated",
    "lead": "critic",
    "communication": "task-based"
  },
  "quality_gates": {
    "enabled": true,
    "consensus": "all_pass",
    "thresholds": {
      "critic": 85,
      "beta-reader": 75,
      "genre-validator": 90
    }
  },
  "cost_estimate": {
    "tokens_per_agent": 30000,
    "warning_message": "검증 팀은 3개 에이전트를 병렬 실행합니다. 약 90K 토큰이 소요될 수 있습니다."
  }
}
