{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "summary.schema.json",
  "title": "Chapter Summary",
  "description": "챕터 요약 (컨텍스트 전달용)",
  "type": "object",
  "required": ["chapter_number", "summary", "created_at"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "chapter_number": {
      "type": "integer",
      "minimum": 1
    },
    "summary": {
      "type": "string",
      "minLength": 100,
      "maxLength": 2000,
      "description": "200-500 단어 권장"
    },
    "key_events": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 300
      },
      "maxItems": 5
    },
    "character_states": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "character_id": { "type": "string", "pattern": "^char_\\d{3}$" },
          "emotional_state": { "type": "string" },
          "location": { "type": "string" }
        }
      }
    },
    "foreshadowing_updates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^fore_\\d{3}$" },
          "action": { "enum": ["planted", "hinted", "paid_off"] }
        }
      }
    },
    "cliffhanger": {
      "type": "string",
      "description": "다음 화 연결 요소",
      "maxLength": 500
    },
    "word_count": {
      "type": "integer",
      "minimum": 0
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
